# Backend
APP_HOST=0.0.0.0
APP_PORT=8000
API_V1_PREFIX=/api/v1
DATABASE_URL=postgresql+asyncpg://quiz:quiz@db:5432/quiz
LOG_LEVEL=info

# Security & auth
SECRET_KEY=change-me
JWT_ALG=RS256
JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private
JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public
ACCESS_TOKEN_EXPIRES_MIN=15
REFRESH_TOKEN_EXPIRES_DAYS=14
ALLOW_CREDENTIALS=true
CORS_ORIGINS=["http://localhost:5173"]

# OAuth
FRONTEND_URL=http://localhost:5173
GOOGLE_CLIENT_ID=change-me
GOOGLE_CLIENT_SECRET=change-me
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
GITHUB_CLIENT_ID=change-me
GITHUB_CLIENT_SECRET=change-me
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# Quiz defaults
DEFAULT_QUIZ_SIZE=10
MAX_QUESTIONS_PER_QUIZ=15

# AI hints
GROQ_API_KEY=change-me
GROQ_MODEL=openai/gpt-oss-120b
GROQ_TEMPERATURE=0.4
GROQ_HINT_MAX_TOKENS=180

# Frontend
VITE_API_URL=http://localhost:8000
