# App limits
DEFAULT_QUIZ_SIZE=10
MAX_QUESTIONS_PER_QUIZ=15

# Admins
ADMIN_EMAILS=["me@example.com"]

# Infra (docker-compose)
POSTGRES_DB=quiz
POSTGRES_USER=quiz
